{
  "manifest_version": 3,
  "name": "a Better Place",
  "version": "2.7.0", 
  "description": "Migliora l'esperienza utente dell'intranet aziendale",
  "permissions": [
    "scripting",
    "tabs",
    "declarativeNetRequest",
    "storage" 
  ],
  "host_permissions": [
    "https://*.it/*",
    "https://raw.githubusercontent.com/*",
    "https://cdnjs.cloudflare.com/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "256": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/logo.png"],
      "matches": ["https://*.it/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "network_rules",
        "enabled": true,
        "path": "src/background/rules.json"
      }
    ]
  }
}